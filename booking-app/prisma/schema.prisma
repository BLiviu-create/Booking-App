datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      String
  bookings  Booking[]
}

model Room {
  id        Int       @id @default(autoincrement())
  number    String
  type      String
  capacity  Int
  bookings  Booking[]
}

model Booking {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  room       Room     @relation(fields: [roomId], references: [id])
  roomId     Int
  startDate  DateTime
  endDate    DateTime
}
